{
  "version": 2,
  "functions": {
    "api/index.js": {
      "maxDuration": 30
    },
    "api/scheduled-tasks.js": {
      "maxDuration": 60
    },
    "api/mt5-sync.js": {
      "maxDuration": 300
    },
    "api/push-cleanup.js": {
      "maxDuration": 60
    }
  },
  "crons": [
    {
      "path": "/api/scheduled-tasks",
      "schedule": "0 */6 * * *"
    },
    {
      "path": "/api/mt5-sync",
      "schedule": "0 */6 * * *"
    },
    {
      "path": "/api/push-cleanup",
      "schedule": "0 0 * * *"
    }
  ]
}
